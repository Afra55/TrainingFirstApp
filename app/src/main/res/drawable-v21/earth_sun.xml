<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="200dp"
    android:height="200dp"
    android:viewportHeight="100"
    android:viewportWidth="100">
    <group
        android:name="sun"
        android:pivotX="50"
        android:pivotY="50"
        android:rotation="0">
        <path
            android:name="path_sun"
            android:fillColor="@android:color/holo_blue_dark"
            android:pathData="
                M 50,50
                a 10,10 0 1,0 20,0
                a 10,10 0 1,0 -20,0" />

        <group
            android:name="earth"
            android:pivotX="75"
            android:pivotY="50">
            <path
                android:name="path_earth"
                android:fillColor="@android:color/holo_green_dark"
                android:pathData="
                    M 70,50
                    a 5,5 0 1,0 10,0
                    a 5,5 0 1,0 -10,0" />
            <group>
                <path
                    android:fillColor="@android:color/holo_orange_dark"
                    android:pathData="
                    M 85,50
                    a 3,3 0 1,0 6,0
                    a 3,3 0 1,0 -6,0"/>
            </group>

        </group>
    </group>
</vector>