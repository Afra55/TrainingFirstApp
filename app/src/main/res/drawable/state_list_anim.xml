<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="@android:integer/config_mediumAnimTime" android:propertyName="rotation" android:repeatCount="infinite" android:repeatMode="reverse" android:valueFrom="-30" android:valueTo="30" android:valueType="floatType" />
            <objectAnimator android:duration="@android:integer/config_longAnimTime" android:propertyName="alpha" android:valueTo="1" android:valueType="floatType" />        </set>
    </item>
    <item android:state_pressed="false">
        <set>
            <objectAnimator android:duration="@android:integer/config_longAnimTime" android:propertyName="alpha" android:repeatCount="infinite" android:repeatMode="reverse" android:valueFrom="0" android:valueTo="1" android:valueType="floatType" />
            <objectAnimator android:duration="@android:integer/config_mediumAnimTime" android:propertyName="rotation" android:valueTo="0" android:valueType="floatType" />
        </set>
    </item>
</selector>